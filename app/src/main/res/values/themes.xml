<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SheyStore" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorOnSurfaceVariant">@color/color_text_hint</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Begin Text Appearance-->

    <style name="TextAppearance.SheyStore.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">64sp</item>
        <item name="android:textColor">@color/color_text</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TextAppearance.SheyStore.textAppearanceOverline" parent="TextAppearance.MaterialComponents.Overline">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/color_text</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TextAppearance.SheyStore.textAppearanceButton" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/color_text</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TextAppearance.SheyStore.textAppearanceCaption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/color_text</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TextAppearance.SheyStore.textAppearanceBody2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/color_text</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TextAppearance.SheyStore.textAppearanceBody1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/color_text</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TextAppearance.SheyStore.textAppearanceSubtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/color_text</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TextAppearance.SheyStore.textAppearanceSubtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/color_text</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TextAppearance.SheyStore.textAppearanceHeadline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/color_text</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TextAppearance.SheyStore.textAppearanceHeadline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/color_text</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TextAppearance.SheyStore.textAppearanceHeadline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">34sp</item>
        <item name="android:textColor">@color/color_text</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TextAppearance.SheyStore.textAppearanceHeadline3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">48sp</item>
        <item name="android:textColor">@color/color_text</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <!-- End Text Appearance-->

    <!-- Begin Button Styles-->

    <style name="Widget.SheyStore.ButtonIcon" parent="Widget.Material3.Button.ElevatedButton.Icon">
        <item name="iconTint">@null</item>
        <item name="android:textColor">@color/color_text</item>
        <item name="iconSize">24dp</item>
        <item name="cornerRadius">20dp</item>
        <item name="iconPadding">10dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAppearance">@style/TextAppearance.SheyStore.textAppearanceButton</item>
        <item name="iconGravity">textStart</item>
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="Widget.SheyStore.Button" parent="Widget.Material3.Button.ElevatedButton">
        <item name="android:textColor">@color/color_text</item>
        <item name="cornerRadius">20dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAppearance">@style/TextAppearance.SheyStore.textAppearanceButton</item>
        <item name="backgroundTint">@color/white</item>
    </style>

    <!-- End Button Styles-->

    <!-- Begin BottomNavigationView Styles -->

    <style name="Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">#33000000</item>
    </style>

    <style name="Custom.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="backgroundTint">@color/white</item>
        <item name="itemTextAppearanceActive">@style/BottomNavigationViewTextStyle</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavigationViewTextStyle</item>
        <item name="itemActiveIndicatorStyle">@style/Custom.Indicator</item>
    </style>

    <style name="BottomNavigationViewTextStyle">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- End BottomNavigationView Styles -->

    <!-- Begin Search Bar Styles-->
    <style name="Custom.SearchBar" parent="Widget.Material3.SearchBar">
        <item name="backgroundTint">@color/shape_gray_background</item>
        <item name="navigationIconTint">@color/color_text_hint</item>
        <item name="android:textColorHint">@color/color_text_hint</item>
    </style>

    <style name="WhiteCursorSearchView" parent="Widget.Material3.SearchView">
        <item name="colorControlActivated">#121212</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <!-- End Search Bar Styles -->

    <!-- Begin TextInputLayout -->
    <style name="TextInputLayout.Outline" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="android:textColorHint">@color/color_text_hint</item>
        <item name="boxBackgroundColor">@color/shape_gray_background</item>
    </style>

    <style name="TextInputLayout.ExpandedDropDown" parent="Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxBackgroundColor">@color/shape_gray_background</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusTopStart">16dp</item>
    </style>
</resources>